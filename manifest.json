{
  "manifest_version": 3,
  "name": "OTP Manager",
  "version": "1.0",
  "description": "Hasilkan kode TOTP secara langsung.",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
	"scripting"
  ],
  "icons": {
    "16": "icons/icon64.png",
    "32": "icons/icon64.png",
    "48": "icons/icon64.png",
    "128": "icons/icon64.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "OTP Manager",
    "default_icon": {
      "16": "icons/icon64.png",
      "32": "icons/icon64.png",
      "48": "icons/icon64.png"
    }
  },
  "host_permissions": [
    "<all_urls>"
  ]
}